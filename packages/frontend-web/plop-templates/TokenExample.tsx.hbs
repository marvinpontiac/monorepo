import React from 'react';
import data from '../../../data/tokens.json';
import CopyButton from '@global-components/CopyButton';

export interface TokenExampleProps {
  type: string;
}
// Use this file to filter the token json and present an example of the token
// If not needed, remove file
// Change columns to what you need to present



const TokenExample: React.FC<TokenExampleProps> = ({ type }) => {

  // change category as needed
  const tokenCategory = "{{lowerCase name}}";
  const filter = data.filter((token) => token.name.startsWith(`${tokenCategory}-${type}`));
  
  return (
    <div className='sb-doc-example'>
      <div className="sb-doc-example__heading">
        <div style=\{{ height: '2rem', flexBasis: '30%' }} />
        <div style=\{{ flexBasis: '20%' }}>
          <b>value</b>
        </div>
        <div style=\{{ flexBasis: '50%' }}>
          <b>css variable</b>
        </div>
      </div>
      {filter.map((token) => (
        <div style=\{{ display: 'flex', gap: '1rem', alignItems: 'center' }} key={token.name}>
          <div style=\{{ background: `var(--${token.name})`, height: '2.25rem', flexBasis: '30%', border: '.01rem solid var(--color-grey-light24)', borderRadius: '2px' }} />
          <div style=\{{ flexBasis: '20%' }}>
            <pre>{token.value}</pre>
          </div>
          <div style=\{{ flexBasis: '50%' }}>
            <CopyButton value={`--${token.name}`} />
          </div>
        </div>
      ))}
    </div>
  );
};

export default TokenExample;
